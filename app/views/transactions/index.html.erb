<div class="row">
	<div class="span12">
		<table class="table">
			<thead>
				<tr>
					<th>Date</th>
					<th>UUID</th>
					<th>Payer</th>
					<th>Payee</th>
				</tr>				
			</thead>
			<tbody>
				<% @transactions.each do |transaction| %>
					<tr>
						<td><%= transaction.details[:posted] %></td>
						<td><a href="<%= transaction_path(transaction.bank_id) %>"><%= transaction.uuid %></a></td>
						<td><%= transaction.this_account[:holder].first[:name] %></td>
						<td><%= transaction.other_account[:holder][:name] %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>